<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/wallets_dest">

    <fragment
        android:id="@+id/wallets_dest"
        android:name="com.marvel.stark.ui.wallets.WalletsFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_wallets">
        <action
            android:id="@+id/action_next"
            app:destination="@id/viewpager_dest"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_add"
            app:destination="@id/wallet_add_dest" />
    </fragment>

    <dialog
        android:id="@+id/wallet_add_dest"
        android:name="com.marvel.stark.ui.dialog.WalletAddDialog"
        android:label="@string/new_wallet"
        tools:layout="@layout/dialog_wallet_add" />

    <fragment
        android:id="@+id/viewpager_dest"
        android:name="com.marvel.stark.ui.walletinfo.ViewPagerFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_view_pager">
        <argument
            android:name="walledId"
            android:defaultValue="-1L"
            app:argType="long" />
        <action
            android:id="@+id/action_next"
            app:destination="@id/wallets_settings_dest"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/wallets_settings_dest"
        android:name="com.marvel.stark.ui.WalletSettingsFragment"
        android:label="WalletsFragment"
        tools:layout="@layout/fragment_wallet_settings">
        <argument
            android:name="walledId"
            android:defaultValue="-1L"
            app:argType="long" />
    </fragment>


</navigation>
